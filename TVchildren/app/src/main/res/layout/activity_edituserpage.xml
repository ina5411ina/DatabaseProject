<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Userpic"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/p1" />

                    <EditText
                        android:id="@+id/myname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/myname"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/birthday" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/imdb" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:background="@drawable/fav_action" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img1"
                        android:background="@drawable/fav_adventure" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img2"
                        android:background="@drawable/fav_animation" />

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img3"
                        android:background="@drawable/fav_comedy" />

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img4"
                        android:background="@drawable/fav_crime" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img5"
                        android:background="@drawable/fav_documentary" />

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img6"
                        android:background="@drawable/fav_drama" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img7"
                        android:background="@drawable/fav_fantasy" />

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img8"
                        android:background="@drawable/fav_horror" />

                    <ImageView
                        android:id="@+id/img10"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img9"
                        android:background="@drawable/fav_mystery" />

                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img10"
                        android:background="@drawable/fav_romance" />

                    <ImageView
                        android:id="@+id/img12"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img11"
                        android:background="@drawable/fav_scifi" />

                    <ImageView
                        android:id="@+id/img13"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/img12"
                        android:background="@drawable/fav_thriller" />

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img1"
                        android:text="LIKE Action " />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox1"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img2"
                        android:text="LIKE Adventure" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox2"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img3"
                        android:text="LIKE Animation" />

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox3"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img4"
                        android:text="LIKE Comedy" />

                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox4"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img5"
                        android:text="LIKE Crime" />
                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox5"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img6"
                        android:text="LIKE Documentary" />

                    <CheckBox
                        android:id="@+id/checkBox7"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox6"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img7"
                        android:text="LIKE Drama" />

                    <CheckBox
                        android:id="@+id/checkBox8"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox7"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img8"
                        android:text="LIKE Fantasy" />

                    <CheckBox
                        android:id="@+id/checkBox9"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox8"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img9"
                        android:text="LIKE Horror" />

                    <CheckBox
                        android:id="@+id/checkBox10"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox9"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img10"
                        android:text="LIKE Mystery" />

                    <CheckBox
                        android:id="@+id/checkBox11"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox10"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img11"
                        android:text="LIKE Romance" />

                    <CheckBox
                        android:id="@+id/checkBox12"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox11"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img12"
                        android:text="LIKE Scifi" />

                    <CheckBox
                        android:id="@+id/checkBox13"
                        android:layout_width="wrap_content"
                        android:layout_height="59dp"
                        android:layout_below="@id/checkBox12"
                        android:layout_margin="20dp"
                        android:layout_toRightOf="@id/img13"
                        android:text="LIKE Thriller" />

                </RelativeLayout>

                    <Button
                        android:id="@+id/finishbtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/finish" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>